{
  "linters": {
    "*.ts": ["tslint --fix", "prettier --write \"**/*.ts\"", "git add"],
    "*.{json, css, md}": [
      "prettier --write \"**/*.{json,scss, less, md}\"",
      "git add"
    ],
    "*.{png,jpeg,jpg,gif,svg}": ["imagemin-lint-staged", "git add"]
  },
  "ignore": ["\"dist/**/*.*\"", "\"node_modules/**/*.*\""]
}
