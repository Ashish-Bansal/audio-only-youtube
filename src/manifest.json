{
  "name": "<%= package.displayName %>",
  "version": "<%= package.version %>",
  "manifest_version": 2,
  "description": "<%= package.description %>",
  "offline_enabled": true,
  "icons": {
    "19": "img/icon19.png",
    "38": "img/icon38.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "tabs",
    "webRequest",
    "*://youtube.com/*", "*://*.youtube.com/*", "*://youtu.be/*", "*://*.youtu.be/*", "*://youtube-nocookie.com/*", "*://*.youtube-nocookie.com/*", "*://*.googlevideo.com/*", "*://*.ytimg.com/*",  "*://*.ytimg.com/*" 
    "webRequestBlocking",
    "storage"
  ],
  "browser_action": {
    "default_title": "Audio Only Youtube"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/content-script.js"],
      "css": ["css/content-script.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "options_page": "html/options.html"
}
