{
  "name": "Audio Only Youtube",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Listen to audio only on youtube.",
  "offline_enabled": true,
  "icons": {
    "19": "img/icon19.png",
    "38": "img/icon38.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "webRequest",
    "*://*/*",
    "webRequestBlocking",
    "storage"
  ],
  "browser_action": {
    "default_title": "Audio Only Youtube"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "audio-only-youtube.js"
      ],
      "css": [
        "audio-only-youtube.css"
      ],
      "run_at": "document_start"
    }
  ]
}
